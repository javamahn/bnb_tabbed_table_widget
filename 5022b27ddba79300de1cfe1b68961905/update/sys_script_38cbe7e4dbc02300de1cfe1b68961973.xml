        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	
	var util = new x_71627_tab_table.TableActionUtil();
	var defaultPortalSuffix = util.getDefaultPortalSuffix();
	var spPage = current.cat_item.sys_class_name == 'sc_cat_item_guide' ? 'sc_cat_item_guide' : 'sc_cat_item';
	var url = '/' + defaultPortalSuffix + '?id=' + spPage;
	
	// we always need the sys_id
	var params = {};
	params.sys_id = current.cat_item.getRefRecord().getUniqueValue();
	
	// get the variable key/value pairs, if any
	var pairs = current.variable_pairs;
	if (pairs) {
		pairs = JSON.parse(pairs);
		
		for (var key in pairs) {
			params[key] = pairs[key];
		}
	
	}
	
	// now update the url
	for (var p in params) {
		url += '&' + p + '=' + params[p];
	}
	
	current.setValue('u_url', url);

})(current, previous);]]></script>
